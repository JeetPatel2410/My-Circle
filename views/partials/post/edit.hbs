            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" >Edit Post</h5>
                    <button type="button" class="editbtn btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row align-items-center">
                         <div class="col-auto">
                            <div class="col-auto"><img id="post-image" src="" style="height: 200px;width: 200px;" />
                        </div>
                            {{!-- <span class="avatar avatar-xl"
                                style="background-image: url(./uploads/{{imageId}})">
                                </span> --}}
                        </div>
                        <div class="col-auto"><input id="fileupload" type="file" name="editavatar"><br><br>
                        </div>
                    </div><br>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label class="form-label">Title</label>
                                <input type="text" class="form-control" name="title" id="titlefield" >
                            </div>
                        </div>

                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <input type="text" class="form-control" name="description" id="description">
                    </div>
                    <input type="hidden" id="hiddenval" name="hiddenval" value="{{_id}}">

                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">
                        Cancel
                    </a>
