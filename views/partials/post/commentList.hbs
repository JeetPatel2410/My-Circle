{{#each data}}
<div class="card-body">
    <div class="d-flex align-items-center">
        <span class="avatar me-3 rounded" style="background-image: url({{commentUser.image}})"></span>
        <div class="d-flex flex-column">
            <div class="d-flex">
                <div>
                    <h3>{{commentUser.firstname}} {{commentUser.lastname}}</h3>
                </div>
                <div class="ms-2" style="margin-top: 2px;">
                    {{formatdate createdOn}}
                </div>
            </div>
            <div>
                {{comment}}
            </div>
        </div>
    </div>
</div><br>
{{/each}}